<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.7"
	client="site"
	method="upgrade">
	<name>MOD_PHOCADOWNLOAD</name>
	<version>1.0.7.2</version>
	<creationDate>01-02-2023</creationDate><!-- dd-mm-yyy -->
	<author>Kathryn Anderson</author>
	<authorUrl>http://gokatan.com</authorUrl>
	<authorEmail>katan@gokatan.com</authorEmail>
	<description>MOD_PHOCADOWNLOAD_DESC</description>
	<copyright>Kathryn Anderson (c) 2023. All rights reserved.</copyright>
	<scriptfile>script.php</scriptfile>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_phocadownload.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_phocadownload.sys.ini</language>
	</languages>
	<files>
        	<filename>mod_phocadownload.xml</filename>
        	<filename module="mod_phocadownload">mod_phocadownload.php</filename>
        	<filename>index.html</filename>
        	<filename>helper.php</filename>
        	<filename>tmpl/default.php</filename>
        	<filename>tmpl/index.html</filename>
		<filename>css/style.css</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
				name="title" 
				type="sql"
				default="1" 
				label="Select a category" 
				query="SELECT id AS value, title FROM #__phocadownload_categories" />
				<field name="maxentries" type="list" default="" label="# Downloads" description="">
					<option value="0">All</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server
			type="extension"
			priority="2"
			name="Phocadownload">
			https://raw.githubusercontent.com/Katan-Technologies/mod_phocadownload/release_update/update.xml
		</server>
	</updateservers>
</extension>
